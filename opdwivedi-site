    // i18n apply
    const applyLang = (lang) => {
      document.documentElement.lang = lang === 'en' ? 'en' : 'hi';
      document.querySelectorAll('[data-i18n]').forEach(el => {
        const key = el.getAttribute('data-i18n');
        if (STR[lang][key]) el.textContent = STR[lang][key];
      });
      // update button label
      const btn = document.getElementById('langToggle');
      btn.textContent = lang === 'en' ? 'हिंदी' : 'EN';
      btn.setAttribute('aria-pressed', lang === 'en' ? 'true' : 'false');
    };

    // Toggle handler
    const langBtn = document.getElementById('langToggle');
    let currentLang = 'hi';
    langBtn.addEventListener('click', () => {
      currentLang = currentLang === 'hi' ? 'en' : 'hi';
      applyLang(currentLang);
    });
    applyLang(currentLang);

    // Form handler (no backend — just thank you)
    function handleSubmit(e){
      e.preventDefault();
      document.getElementById('thanks').classList.remove('hidden');
      e.target.reset();
    }

    // OPTIONAL: Rotate hero variants randomly if you add images/hero2.jpg, hero3.jpg
    const hero = document.querySelector('.hero');
    const variants = ['', 'hero-2', 'hero-3'];
    hero.classList.add(variants[Math.floor(Math.random()*variants.length)]);
  </script>
